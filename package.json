{
  "name": "lovable-clone",
  "version": "1.0.0",
  "description": "A Lovable clone that uses Claude Code SDK for website generation",
  "main": "dist/server/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server/server.js",
    "dev": "ts-node src/server/server.ts",
    "server": "node src/server/server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf dist",
    "build:dev": "npm run clean && npm run build",
    "serve": "npm run build && npm start"
  },
  "keywords": [
    "claude-code",
    "website-generator",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}
